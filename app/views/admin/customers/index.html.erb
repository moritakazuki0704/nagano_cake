<div class="container">
  <div class="row">
    <div class="col-4 m-4">
      <h4 class="bg-secondary text-white text-center m-3 px-3 rounded">会員一覧</h4>
    </div>
  </div>
  <div class="row">
    <div class="col justify-content-center">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customers| %>
            <tr>
              <th><%= customers.id %></th>
              <th>
                <%= link_to admin_customers_path(customers.id) do %>
                  <%= customers.name %>
                <% end %>
              </th>
              <th><%= customers.email %></th>
              <th><%= customers.is_deleted %> </th>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @customers %>
    </div>
  </div>
</div>