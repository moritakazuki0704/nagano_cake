<div class="container">
  <div class="row my-5">
    <div class="col-auto align-self-center">
      <h4 class="bg text-center ml-lg-5 px-5 rounded">
      ジャンル一覧
      </h4>
    </div>
  </div>
  <%= form_with model: @genre,url: admin_genres_path,method: :post do |f| %>
    <div class="row align-items-center form-group">
      <span class="col-sm-auto my-1">
        <%= f.label :"ジャンル名",class: "form-label" %>
      </span>
      <span class="col-sm-auto my-1">
        <%= f.text_field :name,autofocus: true,placeholder:"ジャンル名",class: "form-label" %>
      </span>
      <span class="col-sm-auto my-1">
        <%= f.submit "新規登録",class: "btn btn-success px-5" %>
      </span>
    </div>
  <% end %>
  <div class="row no-gutters mt-4">
  <table class="table border col-lg-4 col-sm-6 ml-md-3">
    <thead class="thead-light">
      <tr>
        <th class="text-right">ジャンル名</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
      <tr>
        <td class="align-middle">
          <%= genre.name %>
        </td>
        <td class="pr-4">
          <%= link_to "編集する", edit_admin_genre_path(genre.id),class: "btn btn-success" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  </div>
  <div class="row justify-content-center">
    <%= paginate @genres %>
  </div>
</div>