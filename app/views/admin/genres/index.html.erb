<div class="container">
  <div class="row my-3">
    <h3 class="bg-secondary text-white my-3 mx-auto mx-md-5 px-4 rounded">ジャンル編集</h3>
  </div>
  <div class="row">
    <%= form_with model: Genre.new,url: admin_genres_path,method: :post do |f| %>
      <%= f.label :"ジャンル名",class: "mr-3" %>
      <%= f.text_field :name,autofocus: true,placeholder:"ジャンル名",class: "mr-3" %>
      <%= f.submit "新規登録",class: "btn btn-success" %>
    <% end %>
  </div>
  <table class="table mt-3">
    <thead class="thead-light">
      <tr>
        <th>ジャンル名</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
      <tr>
        <td>
          <%= genre.name %>
        </td>
        <td>
          <%= link_to "編集する", edit_admin_genre_path(genre.id),class: "btn btn-info" %>
        </td>
      </tr>
      <% end %>
      <%= paginate @genres %>
    </tbody>
  </table>
</div>