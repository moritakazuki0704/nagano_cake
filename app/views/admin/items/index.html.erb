<div class="container">
  <div class="row my-5">
    <div class="col-auto align-self-center">
      <h4 class="bg text-center ml-lg-5 px-5 rounded">
        商品一覧
      </h4>
    </div>
    <div class="col-auto ml-auto mr-4">
      <%= link_to new_admin_item_path do %>
        <i class="fas fa-plus-circle fa-4x"></i>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col justify-content-center">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <th><%= item.id %></th>
              <th>
                <%= link_to admin_item_path(item.id) do %>
                  <%= item.name.truncate(10) %>
                <% end %>
              </th>
              <th><%= item.price %></th>
              <th><%= item.genre.name %></th>
              <th>
                <% if item.is_active == true%>
                  <p class="text-success">販売中</p>
                <% else %>
                  <p class="text-secondary">販売停止中</p>
                <% end %>
              </th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row justify-content-center">
    <%= paginate @items %>
  </div>
</div>