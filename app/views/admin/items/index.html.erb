<div class="container">
  <div class="row my-3">
    <h3 class="bg-secondary text-white my-3 mx-auto mx-md-5 px-4 rounded">商品一覧</h3>
  </div>
  <%= link_to new_admin_item_path do %>
    <button name="button"></button>
  <% end %>
  <table class="table">
    <thead class="thead-light">
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <%= @items.each do |item| %>
        <tr>
          <th><%= item.id %></th>
          <th>
            <%= link_to admin_item_path(item.id) do %>
              <%= item.name %>
            <% end %>
          </th>
          <th><%= item.price %></th>
          <th><%= item.genre.name %></th>
          <th><%= item.is_active %> </th>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @items %>
</div>