<div class="container">
  <div class="row">
    <div class="col-4 m-4">
      <h3 class="bg-secondary text-white text-center m-3 px-3 rounded">管理者ログイン</h3>
    </div>
  </div>
  <div class="row justify-content-center mt-3">
    <%= form_with model: @admin,url: admin_session_path do |f| %>
      <div class="col-2">
        <%= f.label "メールアドレス" %>
      </div>
      <div class="col-4">
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control" %>
      </div>
      <div class="col-2">
        <%= f.label "パスワード" %>
      </div>
      <div class="col-4">
        <%= f.password_field :password, autocomplete: "current-password",class: "form-control" %>
      </div>
      <div class="actions">
        <%= f.submit "Log in" %>
      </div>
    <% end %>
  </div>
</div>