<div class="container">
  <div class="row my-5">
    <div class="col-auto">
      <h4 class="bg-secondary text-white text-center ml-lg-5 px-5 rounded">
        管理者ログイン
      </h4>
    </div>
  </div>
  <%= form_with model: @admin,url: admin_session_path do |f| %>
    <div class="row form-group justify-content-center">
      <span class="col-lg-2 col-md-3">
        <%= f.label "メールアドレス",class: "form-label" %>
      </span>
      <span class="col-md-6 col-sm-4">
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control" %>
      </span>
    </div>
    <div class="row form-group justify-content-center">
      <span class="col-lg-2 col-md-3">
        <%= f.label "パスワード" %>
      </span>
      <span class="col-md-6 col-sm-4">
        <%= f.password_field :password, autocomplete: "current-password",class: "form-control" %>
      </span>
    </div>
    <div class="row form_group justify-content-center">
      <span class="col-md-3 col-sm-4 actions">
        <%= f.submit "ログイン",class: "btn btn-primary px-5" %>
      </span>
    </div>
  <% end %>
</div>