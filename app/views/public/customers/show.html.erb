<div class="container">
  <div class="row my-5">
    <div class="col-auto align-self-center">
      <h4 class="bg-secondary text-white text-center ml-lg-5 px-5 rounded">
        マイページ
      </h4>
    </div>
  </div>
  <div class="row">
    <h4 class="col-sm-auto my-1">登録情報</h4>
    <span class="col-sm-auto my-1">
      <%= link_to "編集する",edit_customers_path,class: "btn btn-success px-3" %>
    </span>
    </div>
    <table class="table">
      <tbody>
        <th>
          <td class="bg-secondary">氏名</td>
          <td><%= @customer.last_name %> <%= @customer.first_name %></td>
        </th>
        <th>
          <td class="bg-secondary">カナ</td>
          <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
        </th>
        <th>
          <td class="bg-secondary">郵便番号</td>
          <td><%= @customer.postal_code %></td>
        </th>
        <th>
          <td class="bg-secondary">住所</td>
          <td><%= @customer.address %></td>
        </th>
        <th>
          <td class="bg-secondary">電話番号</td>
          <td><%= @customer.telephone_number %></td>
        </th>
        <th>
          <td class="bg-secondary">メールアドレス</td>
          <td><%= @customer.email %></td>
        </th>
      </tbody>
    </table>
  <div class="row">
    <h4 class="col-sm-auto my-1">配送先</h4>
    <span class="col-sm-auto my-1"><%= link_to "一覧を見る",addresses_path,class: "btn btn-primary px-3" %></span>
  </div>
  <div class="row">
    <h4 class="col-sm-auto my-1">注文履歴一覧</h4>
    <span class="col-sm-auto my-1"><%= link_to "一覧を見る",orders_path,class: "btn btn-primary px-3" %></span>
  </div>
</div>