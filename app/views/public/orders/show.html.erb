<div class="container">
  <div class="row my-5">
    <div class="col-auto align-self-center">
      <h4 class="bg text-center ml-lg-5 px-5 rounded">
        注文履歴詳細
      </h4>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-md-8">
      <strong>注文情報</strong>
      <table class="table">
        <tbody>
          <tr>
            <th scope="col" class="bg border border-dark pr-0 align_middle">注文日</th>
            <td class="border border-dark pr-5 align-middle"><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th scope="col" class="bg border border-dark pr-0 align-middle">配送先</th>
            <td class="border border-dark pr-5 align-middle">
              〒<%= @order.postal_code %><br>
              <%= @order.address %><br>
              <%= @order.name %>
            </td>
          </tr>
          <tr>
            <th scope="col" class="bg border border-dark pr-0 align-middle">支払方法</th>
            <td class="border border-dark pr-5 align-middle"><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
            <th scope="col" class="bg border border-dark pr-0 align-middle">ステータス</th>
            <td class="border border-dark pr-5 align-middle"><%= @order.status_i18n %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-md-4">
      <strong>請求情報</strong>
      <table class="table">
        <tbody>
          <tr>
            <th scope="col" class="bg border border-dark pr-0 align-middle">商品合計</th>
            <td class="border border-dark pr-5 align-middle"><%= number_to_currency(@total) %></td>
          </tr>
          <tr>
            <th scope="col" class="bg border border-dark pr-0 align-middle">配送料</th>
            <td class="border border-dark pr-5 align-middle"><%= number_to_currency(@order.postage) %></td>
          </tr>
          <tr>
            <th scope="col" class="bg border border-dark pr-0 align-middle">ご請求額</th>
            <td class="border border-dark pr-5 align-middle"><%= number_to_currency(@order.total_payment) %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-md-10">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th scope="col" class="border border-dark align-middle">商品</th>
            <th scope="col" class="border border-dark align-middle">単価(税込)</th>
            <th scope="col" class="border border-dark align-middle">個数</th>
            <th scope="col" class="border border-dark align-middle">小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
          <tr>
            <td class="border border-dark align-middle"><%= order_detail.item.name %></td>
            <td class="border border-dark align-middle"><%= number_to_currency(order_detail.price) %></td>
            <td class="border border-dark align-middle"><%= order_detail.amount %></td>
            <td class="border border-dark align-middle"><%= number_to_currency(order_detail.sub_total) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

