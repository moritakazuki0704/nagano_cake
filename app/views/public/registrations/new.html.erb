<div class="container">
  <div class="row">
    <div class="col-4 my-3">
      <h4 class="bg-secondary text-white text-center m-3 px-3 rounded">
        新規会員登録
      </h4>
    </div>
  </div>
  <%= form_with model: @customers,url:  customer_registration_path do |f| %>
    <div class="row form-group justify-content-center">
      <span class="col-2">
        <%= f.label "氏名" ,class: "form-label" %>
      </span>
      <span class="col-3">
        <%= f.text_field :last_name,autofocus: true,placeholder: "姓",class: "form-control" %>
      </span>
      <span class="col-3">
        <%= f.text_field :first_name,autofocus: true,placeholder: "名",class: "form-control" %>
      </span>
    </div>
    <div class="row form-group justify-content-center">
      <span class="col-2">
        <%= f.label "フリガナ" ,class: "form-label" %>
      </span>
      <span class="col-3">
        <%= f.text_field :last_name_kana,autofocus: true,placeholder: "姓カナ",class: "form-control" %>
      </span>
      <span class="col-3">
        <%= f.text_field :first_name_kana,autofocus: true,placeholder: "名カナ",class: "form-control" %>
      </span>
    </div>
    <div class="row form-group justify-content-center">
      <span class="col-2">
        <%= f.label "郵便番号" ,class: "form-label" %>
      </span>
      <span class="col-3">
        <%= f.text_field :postal_code,autofocus: true,placeholder: "郵便番号",class: "form-control" %>
      </span>
      <span class="col-3"></span>
    </div>
    <div class="row form-group justify-content-center">
      <span class="col-2">
        <%= f.label "住所" ,class: "form-label" %>
      </span>
      <span class="col-6">
        <%= f.text_field :address,autofocus: true,placeholder: "住所",class: "form-control" %>
      </span>
    </div>
    <div class="row form-group justify-content-center">
      <span class="col-2">
        <%= f.label "電話番号" ,class: "form-label" %>
      </span>
      <span class="col-3">
        <%= f.telephone_field :telephone_number,autofocus: true,placeholder: "電話番号",class: "form-control" %>
      </span>
      <span class="col-3"></span>
    </div>
    <div class="row form-group justify-content-center">
      <span class="col-2">
        <%= f.label "メールアドレス" ,class: "form-label" %>
      </span>
      <span class="col-3">
        <%= f.email_field :email,autofocus: true,placeholder: "メールアドレス",class: "form-control" %>
      </span>
      <span class="col-3"></span>
    </div>
    <div class="row form-group justify-content-center">
    <span class="col-2">
      <%= f.label "パスワード" ,class: "form-label" %>
      </span>
      <span class="col-3">
        <%= f.password_field :password, autocomplete: "new-password",class: "form-control" %>
      </span>
      <span class="col-3"></span>
    </div>
    <div class="row form-group justify-content-center">
      <span class="col-2">
        <%= f.label "パスワード" ,class: "form-label" %>
      </span>
      <span class="col-3">
        <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control" %>
      </span>
      <span class="col-3"></span>
    </div>
    <div class="row form_group justify-content-center">
      <span class="col-3 offset-2">
        <%= f.submit "新規登録",class: "btn btn-success btn-block" %>
      </span>
      <span class="col-3"></span>
    </div>
  <% end %>
  <%= render "public/shared/links" %>
</div>